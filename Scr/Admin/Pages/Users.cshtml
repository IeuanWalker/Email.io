@page
@model Admin.Pages.UsersModel
@{
    ViewData["Title"] = "Users";
}

@section Styles
    {
    <Link href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.min.css" rel="stylesheet" />
    <Link href="https://cdn.datatables.net/responsive/2.4.0/css/responsive.dataTables.min.css" rel="stylesheet" />
    <style>
        .dataTables_scrollBody {
            height: 100% !important;
            max-height: 100% !important;
        }

        table.dataTable thead .sorting,
        table.dataTable thead .sorting_asc,
        table.dataTable thead .sorting_desc {
            background: none;
        }

        .custom-select {
            -webkit-appearance: listbox !important;
        }

    </style>

    <style>
        .pagination-container {
            float: right;
            margin: 5px;
            padding: 5px;
        }

        .pagination-item {
            cursor: pointer;
            margin: 5px;
            padding: 6px;
        }

            .pagination-item.disabled {
                cursor: default;
                opacity: .5;
                pointer-events: none;
            }

            .pagination-item.current {
                background: #5755d9;
                color: #fff;
            }

            .pagination-item.previous,
            .pagination-item.next {
                flex: 1 0 50%;
            }

        .dataTables_info {
            opacity: 0.5;
            font-size: 80%;
        }
    </style>

    <style>
        .loading-overlay {
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: #f7f8f9;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            display: none;
            z-index: 10;
            padding: -10px;
            transition: opacity 0.5s ease 0.5s;
            opacity: 0;
        }
    </style>
}

<div class="sticky-header">
    <h3 class="pb-0 m-0">Users</h3>
</div>

<table id="userTable" class="table responsive table-hover p-relative" width="100%">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th>Role</th>
            <th>Can create projects</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>


@section Scripts {
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.4.0/js/dataTables.responsive.min.js"></script>
    <script>
        var loadingOverlay = null;
        $(document).ready(function () {
            var table = $('#userTable').DataTable({
                proccessing: true,
                serverSide: true,
                responsive: true,
                fixedHeader: true,
                orderable: false,
                ajax: {
                    url: "?handler=Users",
                    type: "POST",
                    headers: { 'RequestVerificationToken': $('@Html.AntiForgeryToken()').val() },
                    beforeSend: function () {
                        if (loadingOverlay !== null) {
                            loadingOverlay.style.display = 'grid';
                            loadingOverlay.style.opacity = 0.8;
                        }
                    },
                    complete: function () {
                        loadingOverlay.style.opacity = 0;

                        var elements = document.getElementsByClassName("dataTables_paginate");

                        if (elements.length == 0) {
                            elements = document.getElementsByClassName("pagination-container");
                        }

                        // Loop through the elements and do something with each element
                        for (var i = 0; i < elements.length; i++) {
                            var element = elements[i];

                            element.classList.remove('dataTables_paginate');
                            element.classList.add('pagination-container');

                            // Get all a elements within each element
                            var links = element.querySelectorAll("a");
                            for (var i = 0; i < links.length; i++) {
                                var link = links[i];

                                link.classList.remove('paginate_button');
                                link.classList.add('pagination-item');
                            }
                        }
                    }
                },

                columnDefs: [
                    {
                        "name": "Initials",
                        "data": "initials",
                        "targets": 0,
                        "orderable": false,
                        "render": function (data, type, row, meta) {
                            return "<figure class='avatar avatar- xl' data-initial='" + data + "' style='background - color: #5755d9;'></figure>";
                        }
                    },
                    {
                        "name": "Name",
                        "data": "name",
                        "targets": 1,
                        "orderable": false
                    },
                    {
                        "name": "Role",
                        "data": "role",
                        "targets": 2,
                        "orderable": false
                    },
                    {
                        "name": "CanCreateProject",
                        "data": "canCreateProject",
                        "targets": 3,
                        "orderable": false
                    }
                ]
            });
        });
    </script>
}